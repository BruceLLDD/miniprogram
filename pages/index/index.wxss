/* pages/index/index.wxss */
.container {
  padding: 20rpx;
}

.swiper {
  height: 300rpx;
  margin-bottom: 20rpx;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.choose {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item {
  width: 48%;
  margin-bottom: 20rpx;
}

.item-img {
  width: 100%;
  height: 200rpx;
}

.item-name {
  margin-top: 10rpx;
  font-size: 16rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.cart-btn,
.me-btn {
  width: 45%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5rpx;
}
