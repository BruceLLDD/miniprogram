/* pages/index/index.wxss */
.container1 view{
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 100px;
}
.container1 view:nth-child(1){
  background-color: #007bff;
}
.container1 view:nth-child(2){
  background-color:#4e791c;
}
.container1 view:nth-child(3){
  background-color:rgb(53, 26, 85);
}
.container1{
  display: flex;
  justify-content: space-around;
  width: 100px;
  height: 150px;
  border: 1px solid red;
}

.swiper-container1{
  height: 150px;
}

.s-item{
  height: 100%;
  line-height: 150px;
  text-align: center;
}
.swiper-container1 .s-item:nth-child(1) {
  background-color:pink ;
}
.swiper-container1 .s-item:nth-child(2) {
  background-color: blue;
}
.swiper-container1 .s-item:nth-child(3) {
  background-color: green;
}

.container {
  padding: 20rpx;
}

.swiper {
  height: 300rpx;
  margin-bottom: 20rpx;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.choose {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item {
  width: 48%;
  margin-bottom: 20rpx;
}

.item-img {
  width: 100%;
  height: 200rpx;
}

.item-name {
  margin-top: 10rpx;
  font-size: 16rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.cart-btn,
.me-btn {
  width: 45%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5rpx;
}
