/* pages/goodsList/goodsList.wxss */
.container {
  padding: 20rpx;
}

.goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-item {
  width: 48%;
  margin-bottom: 20rpx;
  padding: 10rpx;
  border: 1px solid #eee;
}

.goods-img {
  width: 100%;
  height: 200rpx;
}

.goods-name {
  margin-top: 10rpx;
  font-size: 16rpx;
}

.goods-price {
  margin-top: 10rpx;
  color: #007bff;
}
