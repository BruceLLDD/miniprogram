/* pages/goodsDetail/goodsDetail.wxss */
.container {
  padding: 20rpx;
}

.goods-img {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.goods-info {
  border-top: 1px solid #eee;
  padding-top: 20rpx;
}

.goods-name {
  font-size: 20rpx;
  font-weight: bold;
}

.goods-price {
  margin-top: 10rpx;
}

.add-to-cart {
  margin-top: 20rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5rpx;
}
